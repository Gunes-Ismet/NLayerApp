@{
    ViewData["Title"] = "Index";
}

@model List<ProductWithCategoryDto>

<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Price</td>
                <td>Stock</td>
                <td>Category</td>
                <td>CreatedDate</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Stock</td>
                    <td>@item.Category.Name</td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <a asp-controller="Products" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Uptade</a>
                        <a asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="col-md-4">
        <a asp-action="Save" asp-controller="Products" class="btn btn-outline-primary">New Product</a>
    </div>
</div>